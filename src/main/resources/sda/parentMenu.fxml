<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Label?>

<VBox spacing="25" alignment="CENTER" xmlns:fx="http://javafx.com/javafx" 
      fx:controller="sda.parentMenu" styleClass="vbox">

    <!-- Header Text -->
    <Label text="Parent Dashboard" 
    	style="-fx-font: 60px 'Arial'; -fx-text-fill: #FFFFFF; -fx-font-weight: bold;" />

    <!-- Buttons -->
    <Button text="View Student Performance" styleClass="menu-button" onAction="#handleViewStudentPerformance" 
    	style="-fx-font: 20px 'Arial'; -fx-pref-width: 280px; -fx-pref-height: 50px;" />
    <Button text="Logout" styleClass="logout-button" onAction="#handleLogout" 
    	style="-fx-font: 20px 'Arial'; -fx-pref-width: 280px; -fx-pref-height: 50px;" />
</VBox>
