<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<StackPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sda.WelcomeController" styleClass="welcome-screen">
    
    <VBox spacing="20" alignment="CENTER">



        <!-- GIF Section -->

        <HBox spacing="10" alignment="CENTER">

            <ImageView fx:id="gif1" fitWidth="500" fitHeight="350" preserveRatio="true"/>

        </HBox>



        <!-- Animated Text -->

        <Text fx:id="welcomeText" text="Welcome to EduTech" style="-fx-fill: white; -fx-font-size: 56px; -fx-font-family: 'Arial'; -fx-font-weight: bold;"/>

        <Text fx:id="gradetext" text="Grade 1-4" style="-fx-fill: white; -fx-font-size: 16px; -fx-font-family: 'Arial'; -fx-font-weight: bold;"/>


    </VBox>
    
</StackPane>
