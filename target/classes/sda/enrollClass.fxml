<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="student.enrollClass" spacing="10" alignment="CENTER">
    <Label text="Enroll in a Course" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
    
    <ListView fx:id="courseListView" prefWidth="300" prefHeight="200" />
    
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="enrollButton" text="Enroll" onAction="#handleEnrollButton" />
        <Button fx:id="backButton" text="Back" onAction="#handleBackButton" />
    </HBox>
</VBox>