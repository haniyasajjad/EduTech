<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="student.GroupMessagingController" spacing="10" alignment="CENTER">
    
    <Label text="Group Chat" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <ScrollPane fitToWidth="true" prefHeight="300">
    <VBox fx:id="messageContainer" spacing="5" style="-fx-padding: 10;" />
</ScrollPane>


    <HBox spacing="10" alignment="CENTER">
        <TextField fx:id="messageInput" promptText="Type a message..." prefWidth="400"/>
        <Button text="Send" onAction="#sendMessage"/>
    </HBox>

    <Button text="Back" onAction="#goBack" />
</VBox>
