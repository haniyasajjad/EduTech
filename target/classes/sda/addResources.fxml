<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="user.addResources"
      spacing="10" alignment="CENTER" styleClass="vbox">

    <Button fx:id="quizButton" text="Add Quiz" 
    	style="-fx-font: 20px 'Arial'; -fx-pref-width: 280px; -fx-pref-height: 50px;" />
    <Button fx:id="assignmentButton" text="Add Assignment" 
    	style="-fx-font: 20px 'Arial'; -fx-pref-width: 280px; -fx-pref-height: 50px;" />
    <Button fx:id="lectureVideoButton" text="Add Lecture Video" 
    	style="-fx-font: 20px 'Arial'; -fx-pref-width: 280px; -fx-pref-height: 50px;" />
    <Button fx:id="exerciseButton" text="Add Exercise" 
    	style="-fx-font: 20px 'Arial'; -fx-pref-width: 280px; -fx-pref-height: 50px;" />
    <Button fx:id="bookButton" text="Add Book" 
    	style="-fx-font: 20px 'Arial'; -fx-pref-width: 280px; -fx-pref-height: 50px;" />
    <Button fx:id="summaryNotesButton" text="Add Summary Notes" 
    	style="-fx-font: 20px 'Arial'; -fx-pref-width: 280px; -fx-pref-height: 50px;" />
    <Button fx:id="goBackButton" text="Back" 
    	style="-fx-font: 20px 'Arial'; -fx-pref-width: 280px; -fx-pref-height: 50px;" onAction="#handleGoBack" />

</VBox>
